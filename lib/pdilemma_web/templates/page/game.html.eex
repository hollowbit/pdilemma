<div class="game">
  <h1>Prisoner's Dilemma</h1>
  <button id="team-button">t1</button>
  <button id="x" class="selected">X</button>
  <button id="y">Y</button>
  <p id="message-box">Messages go here...</p>
  <p id="time-box">Time Left: 0</p>
  <button id="start-game" style="display: none;">Start Game</button>

  <script>
    const roomId = "<%= @room_id %>";
    const isHost = <%= @is_host %>

    $(document).ready(() => {
      window.startSocket(roomId, isHost);
    });
  </script>
</div>